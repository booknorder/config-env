{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "curl@latest",
    "netcat-gnu@0.7.1",
    "nushell@latest",
    "wget@latest"
  ],
  "shell": {
    "scripts": {},
    "init_hook": [
      "export REPO_ROOT=\"$(pwd)\"",
      "mise trust --all",
      "mise install",
      "eval \"$(mise activate bash)\"",
      "npm install",
      "npm exec lefthook install"
    ]
  }
}
